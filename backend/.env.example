# ===========================================
# FlexibleMorals Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Node environment: "development" or "production"
NODE_ENV=development

# Server port (Elastic Beanstalk sets this automatically via PORT)
PORT=3001

# CORS — comma-separated allowed frontend origins
# Local:      http://localhost:5173
# Production: https://flexiblemorals.org,https://www.flexiblemorals.org
CORS_ORIGIN=http://localhost:5173

# AWS Region (production DynamoDB region)
AWS_REGION=us-east-1

# DynamoDB table name
DYNAMODB_TABLE=FlexibleTable

# DynamoDB local endpoint (only used when NODE_ENV != production)
DYNAMODB_ENDPOINT=http://localhost:8000

# Chat message TTL in days (0 = keep forever, default)
# Set to e.g. 7 to auto-delete after one week. Requires TTL enabled on the DynamoDB table.
CHAT_TTL_DAYS=0

# PayPal Webhook (optional — leave blank to skip signature verification in dev)
PAYPAL_WEBHOOK_ID=
PAYPAL_MODE=sandbox
